{
  "name": "@contactlab/appy",
  "version": "0.1.0",
  "description": "Fetch API the Contactlab way",
  "main": "dist/index.js",
  "author": "Contactlab",
  "license": "Apache-2.0",
  "homepage": "https://github.com/contactlab/appy#readme",
  "bugs": "https://github.com/contactlab/appy/issues",
  "repository": "contactlab/appy",
  "engines": {
    "node": ">= 8.0",
    "npm": ">= 5.2",
    "yarn": ">= 1.1"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint ./src",
    "pretest": "flow && yarn run lint",
    "test": "nyc ava",
    "flow-copy": "flow-copy-source -v src dist",
    "build": "flow-remove-types src/ -d dist/",
    "postbuild": "yarn run flow-copy",
    "prepublish": "yarn run build"
  },
  "dependencies": {
    "fp-ts": "0.6.8",
    "isomorphic-fetch": "2.2.1",
    "monocle-ts": "0.5.2"
  },
  "devDependencies": {
    "ava": "0.24.0",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-preset-flow": "6.23.0",
    "babel-register": "6.26.0",
    "eslint": "4.15.0",
    "eslint-config-contactlab": "1.0.0",
    "eslint-plugin-flowtype": "2.41.0",
    "flow-bin": "0.63.1",
    "flow-copy-source": "1.2.1",
    "flow-remove-types": "1.2.3",
    "nyc": "11.4.1",
    "sinon": "4.1.4"
  },
  "ava": {
    "files": [
      "./src/**/test/*.js"
    ],
    "failFast": true,
    "failWithoutAssertions": true,
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "exclude": [
      "**/test/*.js"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "extends": [
      "contactlab",
      "plugin:flowtype/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  }
}
